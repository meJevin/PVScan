<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PVScan.Mobile.Views.ScanPage"
             xmlns:vm="clr-namespace:PVScan.Mobile.ViewModels" 
             xmlns:zxing="clr-namespace:ZXing.Net.Mobile.Forms;assembly=ZXing.Net.Mobile.Forms"
             xmlns:theme="clr-namespace:PVScan.Mobile.Styles"
             NavigationPage.HasNavigationBar="False"
             >
    <Grid RowDefinitions="*,*,*">
        <zxing:ZXingScannerView x:Name="ScannerView" OnScanResult="ScannerView_OnScanResult" Grid.RowSpan="3"/>

        <Button Text="Cancel" Grid.Row="2"
                VerticalOptions="Center" HorizontalOptions="Center"
                Clicked="CancelButton_Clicked">
            
        </Button>
    </Grid>
</ContentPage>