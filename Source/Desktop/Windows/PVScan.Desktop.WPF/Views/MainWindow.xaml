<Window x:Class="PVScan.Desktop.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:PVScan.Desktop.WPF.ViewModels"
        xmlns:local="clr-namespace:PVScan.Desktop.WPF"
        xmlns:di="clr-namespace:PVScan.Desktop.WPF.DI" 
        di:ViewModelLocator.AutoWireViewModel="True"
        Title="PVScan" Height="450" Width="800"
        d:DataContext="{d:DesignInstance Type=viewmodels:MainWindowViewModel}"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"        
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.75*" MinWidth="250"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Grid Background="Red">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Style="{DynamicResource MaterialDesignFlatButton}"/>

                <TextBox Style="{DynamicResource MaterialDesignTextBox}" materialDesign:HintAssist.Hint="Search"
                           Grid.Column="1" Text="123" VerticalAlignment="Center"/>
            </Grid>
        </Grid>

        <Grid Grid.Column="1" Background="Blue">
            
        </Grid>
    </Grid>
</Window>
